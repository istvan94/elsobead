<h1>Modify</h1>

<form class="form-horizontal col-lg-8 col-lg-offset-2"
    method="post" action="/modify/{{subject.id}}">
    <fieldset>
        <div class="form-group">
          <label for="targy" class="col-lg-2 control-label">Subject: </label>
          <div class="col-lg-10">
            <input  type="text" class="form-control"
                    name="targy" id="targy" value="{{subject.targy}}"
                    placeholder="Subject name" required>
          </div>
        </div>
        <div class="form-group">
          <label for="kredit" class="col-lg-2 control-label">Credit: </label>
          <div class="col-lg-10">
            <input  type="number" class="form-control"
                    name="kredit" id="kredit" value="{{subject.kredit}}"
                    placeholder="Credit">
          </div>
        </div>
        <div class="form-group">
          <label for="terem" class="col-lg-2 control-label">Room: </label>
          <div class="col-lg-10">
            <input  type="text" class="form-control"
                    name="terem" id="terem" value="{{subject.terem}}"
                    placeholder="Classroom" required>
          </div>
        </div>
        <div class="form-group">
            <div class="col-lg-8 col-lg-offset-2">
                <button type="reset" class="btn btn-default pull-left">Cancel</button>
                <button type="submit" class="btn btn-primary pull-right">Modify</button>
            </div>
        </div>
    </fieldset>
</form>
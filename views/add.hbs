<h1>Add</h1>
<form class="form-horizontal col-lg-8 col-lg-offset-2"
    method="post" action="/add">
    <fieldset>
        <div class="form-group">
          <label for="targy" class="col-lg-2 control-label">Subject: </label>
          <div class="col-lg-10">
            <input  type="text" class="form-control"
                    name="targy" id="targy"
                    placeholder="pl. C++" required>
          </div>
        </div>
        <div class="form-group">
          <label for="kredit" class="col-lg-2 control-label">Credit: </label>
          <div class="col-lg-10">
            <input  type="number" class="form-control"
                    name="kredit" id="kredit" 
                    placeholder="Pl. 2">
          </div>
        </div>
        <div class="form-group">
          <label for="terem" class="col-lg-2 control-label">Room: </label>
          <div class="col-lg-10">
            <input  type="text" class="form-control"
                    name="terem" id="terem"
                    placeholder="Pl. 00-113" required>
          </div>
        </div>
        <div class="form-group">
            <div class="col-lg-8 col-lg-offset-2">
                <button type="reset" class="btn btn-default pull-left">Cancel</button>
                <button type="submit" class="btn btn-primary pull-right">Add</button>
            </div>
        </div>
    </fieldset>
</form>